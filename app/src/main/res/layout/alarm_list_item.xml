<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:descendantFocusability="blocksDescendants"
    tools:context=".ui.AlarmListActivity"
    android:background="#ffffffff">

    <TextView
        android:id="@+id/alarm_list_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#c3ffffff"
        android:textColor="#ff080805" />

    <ImageView
        android:id="@+id/delete_alarm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:onClick="deleteAlarm"
        android:src="@drawable/ic_remove"
        android:text="@string/delete"
        android:background="#fffefefe" />
</RelativeLayout>